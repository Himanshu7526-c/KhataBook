<%- include('./partials/header.ejs') %>

<div class="logincontainer w-full h-[80%] flex flex-col items-center justify-center">

    <!-- âœ… Flash Messages -->
    <% if (success_msg) { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded mb-4 w-full max-w-md text-center">
            <%= success_msg %>
        </div>
    <% } %>

    <% if (error_msg) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded mb-4 w-full max-w-md text-center">
            <%= error_msg %>
        </div>
    <% } %>

    <div class="loginpanel">
        <h3 class="text-2xl mb-3">Create account</h3>
        <form autocomplete="off" action="/register" class="flex flex-col gap-2 items-start" method="post">
            <input class="block px-3 py-2 border-[1px] border-zinc-100 rounded-md" type="email" placeholder="Email" name="email">
            <input class="block px-3 py-2 border-[1px] border-zinc-100 rounded-md" type="text" placeholder="Username" name="username">
            <input class="block px-3 py-2 border-[1px] border-zinc-100 rounded-md" type="text" placeholder="Full Name" name="name">
            <input class="block px-3 py-2 border-[1px] border-zinc-100 rounded-md" type="password" placeholder="Password" name="password">
            <input class="block px-4 py-2 bg-blue-500 rounded-md text-white cursor-pointer" type="submit" value="Create">
        </form>
        <a class="mt-5 inline-block text-blue-500" href="/">Have an account? Login here.</a>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
